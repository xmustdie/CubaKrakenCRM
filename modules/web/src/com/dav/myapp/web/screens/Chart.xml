<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://chart.caption"
        messagesPack="com.dav.myapp.web.screens"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <data readOnly="true">
        <keyValueCollection id="keyOrgDc">
            <loader id="keyOrgDl">
                <query>
                    <![CDATA[select o.organization, count(o.organization) from myapp_RequestToOrganization o group by o.organization]]>
                </query>
            </loader>
            <properties>
                <property name="name" class="com.dav.myapp.entity.RequestToOrganization"/>
                <property name="sum" datatype="decimal"/>
            </properties>
        </keyValueCollection>
        <keyValueCollection id="keyOrgByTypesDc">
            <loader id="keyOrgByTypesDl">
                <query>
                    <![CDATA[select o.organization.taxesTypeOrganization, count(o.organization) from myapp_RequestToOrganization o group by o.organization.taxesTypeOrganization]]>
                </query>
            </loader>
            <properties>
                <property name="name" class="com.dav.myapp.entity.RequestToOrganization"/>
                <property name="sum" datatype="decimal"/>
            </properties>
        </keyValueCollection>
    </data>
    <layout spacing="false" maxWidth="100%">
        <chart:pieChart id="pieChart"
                        dataContainer="keyOrgDc"
                        height="100%"
                        titleField="name.nameOrganization"
                        valueField="sum"
                        width="80%"
                        caption="&#1050;&#1086;&#1083;&#1080;&#1095;&#1077;&#1089;&#1090;&#1074;&#1086; &#1079;&#1072;&#1087;&#1088;&#1086;&#1089;&#1086;&#1074; &#1087;&#1086; &#1086;&#1088;&#1075;&#1072;&#1085;&#1080;&#1079;&#1072;&#1094;&#1080;&#1103;&#1084;">
            <chart:legend autoMargins="false"
                          marginRight="20"
                          markerType="SQUARE"
                          position="RIGHT"
                          valueText="[[category]]: [[value]] "/>
        </chart:pieChart>
        <chart:pieChart id="pieChart2"
                        dataContainer="keyOrgByTypesDc"
                        height="100%"
                        titleField="name.taxesTypeOrganization"
                        valueField="sum"
                        width="80%"
                        caption="&#1050;&#1086;&#1083;&#1080;&#1095;&#1077;&#1089;&#1090;&#1074;&#1086; &#1079;&#1072;&#1087;&#1088;&#1086;&#1089;&#1086;&#1074; &#1087;&#1086; &#1090;&#1080;&#1087;&#1091; &#1086;&#1088;&#1075;&#1072;&#1085;&#1080;&#1079;&#1072;&#1094;&#1080;&#1080;">
            <chart:legend autoMargins="false"
                          marginRight="20"
                          markerType="SQUARE"
                          position="RIGHT"
                          valueText="[[category]]: [[value]] "/>
        </chart:pieChart>
    </layout>
</window>